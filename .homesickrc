def installVundler
  `git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle`
end

def installTmux
  `brew install tmux` unless system 'which tmux'
end

def installZsh
  `brew install zsh` unless system 'which zsh'
end

def installNvm
  #https://github.com/creationix/nvm
  unless system 'which nvm'
    puts 'Installing nvm'
    `curl https://raw.githubusercontent.com/creationix/nvm/v0.22.0/install.sh | bash`
    `source ~/.bashrc`
  end
end

def installTheSilverSearcher
  `brew install the_silver_searcher` unless system 'which ag'
end

def installFonts
  #https://github.com/powerline/fonts
  unless system 'ls /Library/Fonts/SourceCodePro'
    puts 'Installing font'
    `curl -LOk https://github.com/powerline/fonts/archive/master.zip`
    `mkdir /Library/Fonts/SourceCodePro`
    `unzip -j "master.zip" "fonts-master/SourceCodePro\*" -d "/Library/Fonts/SourceCodePro"`
    `rm master.zip`
  end
end

installVundler
installTmux
installZsh
installNvm
installTheSilverSearcher

#UI
installFonts
