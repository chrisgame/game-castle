def installVundler
  `git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle`
end

def installTmux
  `brew install tmux` unless system 'which tmux'
end

def installZsh
  `brew install zsh` unless system 'which zsh'
end

def generateSshKey
  #https://help.github.com/articles/generating-ssh-keys
  `ssh-add ~/.ssh/id_rsa` unless system 'cat ~/.ssh/id_rsa'
end

def installRvm
  #http://rvm.io/rvm/install
  `curl -sSL https://get.rvm.io | bash -s stable --ruby` unless system 'which rvm'
end

